---
title: {{ my_title }}
layout: page
---

<div class="portfolio-item">

  
  <div class="portfolio-item-video-details">
    <div class="portfolio-item-video">
          {{ video_embed.code }}
    </div>
    <div class="portfolio-item-details">
        <div class="portfolio-item-credits">
          {%- for credit in credits -%}
            <div class="portfolio-item-credits-entry">
                 <span class="portfolio-item-credits-name">{{credit.credit.name}}</span>
                 <span class="portfolio-item-credits-role">{{credit.credit.role}}</span>
            </div>
          {%- endfor -%}
        </div>
        <div class="portfolio-item-details-text">
            <div class="portfolio-item-title">{{ my_title }}</div>
            <div class="portfolio-item-description">{{ description | newline_to_br }}</div>
        </div>
    </div>
  </div>


    <div class="portfolio-item-still-grid">
               <img class="portfolio-item-still"
                    src="{{ stills[0] }}"
               />
          {%- for still in stills -%}
               <img class="portfolio-item-still"
                    src="{{ still }}"
               />
          {%- endfor -%}

    </div>

</div>

